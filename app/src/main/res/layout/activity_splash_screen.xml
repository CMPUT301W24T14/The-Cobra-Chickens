<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/splash_header"
        android:text="@string/welcome_msg"
        android:gravity="center"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="180sp"
        android:fontFamily="sans-serif-black"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/user_choice"
        android:text="@string/sign_in_decision"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:layout_marginBottom="15sp"
        />

    <Button
        android:id="@+id/btn_attend"
        android:text="@string/attend"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btn_organize"
        android:text="@string/organize"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_admin"
        android:text="@string/administrator_login"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"

        />

</LinearLayout>